      <!-- OAK-D Pro Sensor Assembly -->
      <link name="oakd_pro_link">
        <pose>0.12 0 0.05 0 0 0</pose> <!-- Mounted forward -->
        <visual name="visual">
          <geometry>
            <box>
              <size>0.02 0.1 0.03</size>
            </box>
          </geometry>
        </visual>

        <!-- RGB Camera -->
        <sensor name="rgb_camera" type="camera">
          <pose>0 0 0 0 0 0</pose>
          <camera>
            <horizontal_fov>1.274</horizontal_fov>
            <image>
              <width>1920</width>
              <height>1080</height>
              <format>R8G8B8</format>
            </image>
            <clip>
              <near>0.1</near>
              <far>100</far>
            </clip>
          </camera>
          <always_on>1</always_on>
          <update_rate>30</update_rate>
          <visualize>true</visualize>
          <topic>/camera/image_raw</topic>
        </sensor>

        <!-- Depth Camera -->
        <sensor name="depth_camera" type="depth">
          <pose>0 0 0 0 0 0</pose>
          <camera>
            <horizontal_fov>1.274</horizontal_fov>
            <image>
              <width>1280</width>
              <height>720</height>
              <format>R8G8B8</format>
            </image>
            <clip>
              <near>0.1</near>
              <far>10</far>
            </clip>
          </camera>
          <always_on>1</always_on>
          <update_rate>30</update_rate>
          <visualize>true</visualize>
          <topic>/camera/depth</topic>
        </sensor>
      </link>

      <!-- Optical Frame Link: Rotated -90deg pitch, +90deg yaw relative to the body -->
      <!-- Standard CV frame: Z-forward, X-right, Y-down -->
      <link name="oakd_pro_optical_frame">
        <pose>0.12 0 0.05 -1.57079632679 0 -1.57079632679</pose>
      </link>

      <joint name="oakd_pro_joint" type="fixed">
        <parent>base_link</parent>
        <child>oakd_pro_link</child>
      </joint>

      <joint name="oakd_pro_optical_joint" type="fixed">
        <parent>oakd_pro_link</parent>
        <child>oakd_pro_optical_frame</child>
      </joint>
